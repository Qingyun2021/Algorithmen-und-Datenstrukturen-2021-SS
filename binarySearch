import java.util.Scanner;

public class BinarySearch {
    public static void main(String args[]) throws Exception {
        int[] arr = new int[100];
        for (int i = 0; i < arr.length; i++){
            arr[i]=i;
        }
        Scanner scanner = new Scanner(System.in);
        System.out.println("give me an integer number, it should be in range[0,99]: ");
        int takeNumber = scanner.nextInt();
        binarySearchIteratively(arr,takeNumber);
        int r = binarySearchRecursively(arr,takeNumber,0,99);
        System.out.println("The iterative method searched it for "+r + " times");
    }


    public static void binarySearchIteratively (int[] arr, int num){
        int counter = -1;
        int low= 0;
        int high = arr.length -1;
        int mid = (low + high )/2;
        while(low <= high){
//            System.out.println("now it searchs index"+ mid);
            if(arr[mid] == num) {
                System.out.println("The number is in Array.\nIt searched " + (counter + 2) + " times ");
                return;
            }
            if(arr[mid] < num){
                low = mid+1;
            }
            if(arr[mid] > num){
                high = mid -1;
            }
            mid = (low + high )/2;
            counter ++;
        }
        System.out.println("The number is not in array");
    }

    public static int binarySearchRecursively (int[] arr, int num,int low, int high) throws Exception{
        if(low <= high){
            int mid = (low+high)/2;
            if(arr[mid]==num){
                return 1;
            }
            if(arr[mid]>num){
                return 1+ binarySearchRecursively(arr,num,low,mid-1);
            }
            if(arr[mid]<num){
                return 1+ binarySearchRecursively(arr,num,mid+1,high);
            }
        }
        throw new Exception("The Number is not in array");
    }
}
